@using LoyaltyCouponsSystem.BLL.ViewModel.Customer
@model CustomerViewModel

@{
    ViewData["Title"] = "Update Customer";
}

<h1>Update Customer</h1>

<form asp-action="UpdateCustomer" method="post">
    <input type="hidden" asp-for="Code" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactDetails"></label>
        <input asp-for="ContactDetails" class="form-control" />
        <span asp-validation-for="ContactDetails" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update Customer</button>
</form>
