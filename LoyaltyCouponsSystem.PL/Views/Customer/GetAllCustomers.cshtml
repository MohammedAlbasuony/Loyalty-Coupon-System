@using LoyaltyCouponsSystem.BLL.ViewModel.Customer
@model List<CustomerViewModel>

@{
    ViewData["Title"] = "All Customers";
}

<h1>All Customers</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Contact Details</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Code</td>
                <td>@customer.Name</td>
                <td>@customer.ContactDetails</td>
                <td>
                    <a href="@Url.Action("GetCustomerById", "Customer", new { id = customer.Code })" class="btn btn-info">View</a>
                    <a href="@Url.Action("UpdateCustomer", "Customer", new { id = customer.Code })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("DeleteCustomer", "Customer", new { id = customer.Code })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
