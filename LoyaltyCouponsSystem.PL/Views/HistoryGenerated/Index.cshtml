@{



    Layout = "~/Views/Shared/_LayoutCoupon.cshtml";


}
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Coupon History</h4>
            <input type="text" id="searchBox" class="form-control" placeholder="Search by Serial Number">
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="couponTable"
                       class="table table-striped table-hover"
                       data-toggle="table"
                       data-url="/HistoryGenerated/GetAllCoupons"
                       data-pagination="true"
                       data-side-pagination="server"
                       data-page-size="100"
                       data-search="false">
                    <thead>
                        <tr>
                            <th data-field="serialNumber">Serial Number</th>
                            <th data-field="typeOfCoupone">Type Of Coupon</th>
                            <th data-field="governorateName">Governorate</th>
                            <th data-field="areaName">Area</th>
                            <th data-field="value">Value</th>
                            <th data-field="numInYear">Order In Year</th>
                            <th data-field="status">Status</th>
                            <th data-field="creationDateTime">Creation Date</th>

                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var $table = $('#couponTable');

        // تطبيق البحث عند الكتابة
        $('#searchBox').on('keyup', function () {
            $table.bootstrapTable('refresh', {
                query: { search: $(this).val() }
            });
        });
    });
</script>
