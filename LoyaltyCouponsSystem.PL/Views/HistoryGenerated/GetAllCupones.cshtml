@using LoyaltyCouponsSystem.DAL.Entity;
@model IEnumerable<Coupon>


@{
    ViewData["Title"] = "GetAllCupones";

    
    Layout = "~/Views/Shared/_LayoutCoupon.cshtml";


}



 
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">CouponHistory</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="basic-datatables"
                       class="display table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Serial Number</th>
                            <th>Type Of Coupone</th>
                            <th>Governorate Id</th>
                            <th>Area Id</th>
                            <th>Value</th>
                            <th>Order In Year</th>
                            <th>Status</th>
                            <th>Creation Date</th>

                            <th>Number Of Scans</th>

                            <th>Generated By</th>

                            <th>Scaned By</th>



                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Serial Number</th>
                            <th>Type Of Coupone</th>
                            <th>Governorate Id</th>
                            <th>Area Id</th>
                            <th>Value</th>
                            <th>Order In Year</th>
                            <th>Status</th>
                            <th>Creation Date</th>

                            <th>Number Of Scans</th>

                            <th>Generated By</th>

                            <th>Scaned By</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                <tr>
                    <td>
                                    @Html.DisplayFor(modelItem => item.SerialNumber)
                    </td>
                    <td>
                                    @Html.DisplayFor(modelItem => item.TypeOfCoupone)
                    </td>
                    <td>
                                    @Html.DisplayFor(modelItem => item.GovernorateId)
                    </td>
                    <td>
                                    @Html.DisplayFor(modelItem => item.AreaId)
                    </td>
                    <td>
                                    @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                                    @Html.DisplayFor(modelItem => item.NumInYear)
                    </td>
                    <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                                    @Html.DisplayFor(modelItem => item.CreationDateTime)
                    </td>
                    <td>
                        <a asp-action="Edit " asp-route-id="@item.CouponeId">Number Of Scans</a> |
                    </td>
                    <td>
                                    @Html.DisplayFor(modelItem => item.EmployeWhoGenerateID)
                    </td>
                   <td>
                        <a asp-action="" asp-route-id="@item.CouponeId">Scaned By</a> |
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CouponeId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.CouponeId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.CouponeId">Delete</a>
                    </td>
                </tr>
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>