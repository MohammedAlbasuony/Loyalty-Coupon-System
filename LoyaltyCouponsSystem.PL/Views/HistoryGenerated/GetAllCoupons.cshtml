@using LoyaltyCouponsSystem.BLL.ViewModel.QRCode
@model IEnumerable<CouponViewModel>

@{
    ViewData["Title"] = "Coupon List";
    Layout = "~/Views/Shared/_LayoutCoupon.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Coupon History</h4>
            <form method="get" class="form-inline">
                <input type="text" name="serialNumber" class="form-control mr-2" placeholder="Search by Serial Number" value="@ViewContext.HttpContext.Request.Query["serialNumber"]" />
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Serial Number</th>
                            <th>Type Of Coupon</th>
                            <th>Governorate</th>
                            <th>Area</th>
                            <th>Value</th>
                            <th>Order In Year</th>
                            <th>Status</th>
                            <th>Creation Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SerialNumber</td>
                                <td>@item.TypeOfCoupone</td>
                                <td>@item.GovernorateName</td>
                                <td>@item.AreaName</td>
                                <td>@item.Value</td>
                                <td>@item.NumInYear</td>
                                <td>@item.Status</td>
                                <td>@item.CreationDateTime?.ToString("yyyy-MM-dd")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div>
                <!-- Pagination -->
                <nav>
                    <ul class="pagination">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                                <a class="page-link" href="?serialNumber=@ViewContext.HttpContext.Request.Query["serialNumber"]&page=@i">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
