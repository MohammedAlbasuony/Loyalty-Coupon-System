@using LoyaltyCouponsSystem.BLL.ViewModel.Technician
@model TechnicianViewModel

@{
    ViewData["Title"] = "Update Technician";
}

<h1>Update Technician</h1>

<form asp-action="UpdateTechnician" method="post">
    <input type="hidden" asp-for="Code" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber1"></label>
        <input asp-for="PhoneNumber1" class="form-control" />
        <span asp-validation-for="PhoneNumber1" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update Technician</button>
</form>
