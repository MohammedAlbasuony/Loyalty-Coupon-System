@model LoyaltyCouponsSystem.BLL.ViewModel.Admin.ManageUsersViewModel

@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_LayoutCoupon.cshtml";
}

<h1>Manage Users</h1>

<h3>Confirmed Users</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Current Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.ConfirmedUsers)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <!-- Role Assignment Form -->
                    <form asp-action="AssignRole" asp-controller="Admin" method="post" style="display:inline;">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <select name="roleName" class="form-select form-select-sm" style="width:auto; display:inline;">
                            @foreach (var role in Model.AllRoles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        <button class="btn btn-success btn-sm">Assign Role</button>
                    </form>

                    <!-- Confirm Account Form (Only for Unconfirmed Users) -->
                    @if (!(user.EmailConfirmed ?? false))  
                    {
                        <form asp-action="ConfirmAccount" asp-controller="Admin" method="post" style="display:inline;">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button class="btn btn-warning btn-sm">Confirm Account</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

