@using LoyaltyCouponsSystem.BLL.ViewModel.Account
@model RegisterViewModel;

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container-fluid min-vh-100 d-flex justify-content-center align-items-center" style="background: linear-gradient(135deg, #1b6ec2, #87ceeb);">
    <div class="card shadow border-0" style="max-width: 600px; width: 100%; background-color: rgba(255, 255, 255, 0.95); border-radius: 15px;">
        <div class="card-body p-4">
            <h2 class="text-center mb-4" style="color: #1b6ec2; font-weight: 700;">Register</h2>
            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label" style="font-weight: 600; color: #333;"></label>
                        <input asp-for="Name" class="form-control" style="border: 1px solid #ddd; border-radius: 10px; padding: 8px;" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="PhoneNumber" class="form-label" style="font-weight: 600; color: #333;"></label>
                        <div class="input-group">
                            <span class="input-group-text" style="background-color: #f8f9fa; border: 1px solid #ddd; border-radius: 10px 0 0 10px;">+20</span>
                            <input asp-for="PhoneNumber" class="form-control" style="border: 1px solid #ddd; border-radius: 0 10px 10px 0; padding: 8px;" />
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Governorate" class="form-label" style="font-weight: 600; color: #333;"></label>
                        <input asp-for="Governorate" class="form-control" style="border: 1px solid #ddd; border-radius: 10px; padding: 8px;" />
                        <span asp-validation-for="Governorate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="City" class="form-label" style="font-weight: 600; color: #333;"></label>
                        <input asp-for="City" class="form-control" style="border: 1px solid #ddd; border-radius: 10px; padding: 8px;" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="NationalID" class="form-label" style="font-weight: 600; color: #333;"></label>
                        <input asp-for="NationalID" class="form-control" style="border: 1px solid #ddd; border-radius: 10px; padding: 8px;" />
                        <span asp-validation-for="NationalID" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Password" class="form-label" style="font-weight: 600; color: #333;"></label>
                        <input asp-for="Password" class="form-control" type="password" style="border: 1px solid #ddd; border-radius: 10px; padding: 8px;" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label asp-for="ConfirmPassword" class="form-label" style="font-weight: 600; color: #333;"></label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" style="border: 1px solid #ddd; border-radius: 10px; padding: 8px;" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 mt-3" style="border-radius: 20px; font-size: 1rem; background-color: #1b6ec2; border: none;">
                    Register
                </button>
                <div class="text-center mt-4">
                    <p style="font-size: 0.9rem; font-weight: 600; color: #333;">
                        Already have an account?
                        <a asp-controller="Account" asp-action="Login" class="text-decoration-none"
                           style="color: #1b6ec2; font-weight: bold; transition: color 0.3s;"
                           onmouseover="this.style.color='#004a91';"
                           onmouseout="this.style.color='#1b6ec2';">
                            Login
                        </a>
                    </p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary mt-2"
                       style="font-size: 0.85rem; font-weight: 600; border-radius: 30px; padding: 8px 20px; transition: all 0.3s;"
                       onmouseover="this.style.backgroundColor='#1b6ec2'; this.style.color='white';"
                       onmouseout="this.style.backgroundColor='transparent'; this.style.color='#1b6ec2';">
                        Back
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial.cshtml")
}
