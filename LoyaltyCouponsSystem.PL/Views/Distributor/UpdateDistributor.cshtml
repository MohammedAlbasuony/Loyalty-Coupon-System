@model LoyaltyCouponsSystem.BLL.ViewModel.Distributor.DistributorViewModel

@{
    ViewData["Title"] = "Update Distributor";
}

<h1>Update Distributor</h1>

<form asp-action="UpdateDistributor" method="post">
    <div class="form-group">
        <label>Code</label>
        <input asp-for="Code" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Phone Number</label>
        <input asp-for="PhoneNumber1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Governate</label>
        <select asp-for="SelectedGovernate" asp-items="Model.Governates" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>City</label>
        <select asp-for="SelectedCity" asp-items="Model.Cities" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
